{ 
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "exclude": [
      "dist",
      "build",
      "node_modules"
    ],
}